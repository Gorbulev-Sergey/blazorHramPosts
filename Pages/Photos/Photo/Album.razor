<div class="col mb-3">
    <div class="card bg-dark text-white border-0">
        <img src="@album.cover_image" class="card-img">
        <div class="card-img-overlay" style="background-color:rgba(0,0,0,.3)">
            <h4>@album.title</h4>
            <div>@album.description</div>
            <div class="badge badge-secondary badge-pill">фотографий в альбоме: <span class="badge badge-light badge-pill">@album.images.Count</span></div>
            <div class="badge badge-secondary badge-pill">опубликован: <span class="badge badge-light badge-pill">@album.created.ToShortDateString()</span></div>
        </div>
        <div class="card-body position-absolute fixed-bottom d-flex justify-content-center">
            @Navigation
        </div>
    </div>
</div>




@code {
    [Parameter]
    public imageAlbum album { get; set; }

    [Parameter]
    public RenderFragment Navigation { get; set; }
}
